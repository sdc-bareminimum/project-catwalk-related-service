{
	"name": "project-catwalk-related-service",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"start": "nodemon app/index.js",
		"test": "cross-env NODE_ENV=test jest --no-cache --detectOpenHandles --runInBand --forceExit --testTimeout=10000",
		"test:watch": "cross-env NODE_ENV=test jest --no-cache --detectOpenHandles --runInBand --forceExit --testTimeout=10000 --onlyChanged --watch",
		"pretest": "cross-env NODE_ENV=test npm run db:reset",
		"db:create:test": "cross-env NODE_ENV=test npm run sequelize db:create",
		"db:reset": "npm run sequelize db:create && npm run sequelize db:migrate && npm run sequelize db:seed:all",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"sequelize": "sequelize-cli --options-path=config/options.js",
		"csv:clean-file": "node csv_data/csvFileCleaner.js",
		"csv:clean-all": "for i in csv_data/*.csv; do fullfilename=$i; filename=$(basename \"$fullfilename\"); fname=\"${filename%.*}\"; TARGET_FILE=\"$fname\" npm run csv:clean-file; done"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sdc-bareminimum/project-catwalk-related-service.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/sdc-bareminimum/project-catwalk-related-service/issues"
	},
	"homepage": "https://github.com/sdc-bareminimum/project-catwalk-related-service#readme",
	"dependencies": {
		"body-parser": "^1.19.0",
		"cors": "^2.8.5",
		"csv-parser": "^3.0.0",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"morgan": "^1.10.0",
		"nodemon": "^2.0.13",
		"pg": "^8.7.1",
		"pg-copy-streams": "6.0.2",
		"pg-pool": "^3.4.1",
		"sequelize": "^6.6.5"
	},
	"devDependencies": {
		"chai": "^4.3.4",
		"cross-env": "^7.0.3",
		"eslint": "^7.32.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-plugin-import": "^2.24.2",
		"husky": "^4.3.8",
		"jest": "^27.2.2",
		"lint-staged": "^11.1.2",
		"readline": "^1.3.0",
		"sequelize-cli": "^6.2.0",
		"sequelize-test-helpers": "^1.4.2",
		"sinon": "^11.1.2",
		"supertest": "^6.1.6"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md}": [
			"prettier --write"
		],
		"*.js": [
			"eslint --fix"
		]
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es2021": true
		},
		"ignorePatterns": [
			"models/",
			"migrations/",
			"seeders/"
		],
		"extends": [
			"airbnb-base"
		],
		"parserOptions": {
			"ecmaVersion": 12,
			"sourceType": "module"
		},
		"rules": {
			"no-console": "off",
			"no-undef": "off",
			"no-unused-vars": "off"
		}
	},
	"prettier": {
		"useTabs": true,
		"tabSize": 2,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": true
	},
	"jest": {
		"setupFilesAfterEnv": [
			"./app/test-utils/suiteSetup.js"
		],
		"testEnvironment": "node",
		"coveragePathIgnorePatterns": [
			"/node_modules/"
		]
	}
}
